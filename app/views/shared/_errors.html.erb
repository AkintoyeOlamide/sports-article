<% if !flash.alert.nil?%>
<% flash.alert.each do |msg| %>
<div class="alert alert-danger alert-dismissible fade show mb-0" role="alert">
    <%= msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% end %>
<% end %>